<Window x:Class="SubscriptionManager.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Статистика подписок" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FFF5F7FA">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="📊 Статистика подписок" 
                      FontSize="22" FontWeight="Bold" 
                      Foreground="#FF2C3E50"
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="💰" FontSize="18" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Текущий месяц" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding TotalMonthly, StringFormat={}{0:F2} руб.}" 
                                      Foreground="#FF2C3E50" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="📅" FontSize="18" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Годовые расходы" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding TotalYearly, StringFormat={}{0:F2} руб.}" 
                                      Foreground="#FF2C3E50" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="18" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Активных подписок" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ActiveCount}" 
                                      Foreground="#FF27AE60" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="📋 Распределение по категориям" 
                                  FontWeight="Bold" Margin="0,0,0,15" FontSize="14"/>
                        <lvc:PieChart Series="{Binding PieSeries}" 
                                     LegendLocation="Bottom" 
                                     Height="250"
                                     Hoverable="True">
                            <lvc:PieChart.DataTooltip>
                                <lvc:DefaultTooltip SelectionMode="OnlySender"/>
                            </lvc:PieChart.DataTooltip>
                        </lvc:PieChart>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="📈 Динамика расходов по месяцам" 
                                  FontWeight="Bold" Margin="0,0,0,15" FontSize="14"/>
                        <lvc:CartesianChart Series="{Binding LineSeries}" Height="250"
                                           LegendLocation="None">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Месяцы" Labels="{Binding Months}"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Сумма (руб)">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="100"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>
            </Grid>

            <Button Content="Закрыть" Click="CloseButton_Click" 
                    HorizontalAlignment="Center" Width="120" Height="35" Margin="0,20,0,0"
                    Background="#FF3498DB" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </ScrollViewer>
</Window>