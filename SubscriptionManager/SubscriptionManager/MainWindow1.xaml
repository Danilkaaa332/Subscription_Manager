<Window x:Class="SubscriptionManager.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscription Manager" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA">

    <Window.Resources>
        <Style x:Key="SummaryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style x:Key="UpcomingRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsUpcoming}" Value="True">
                    <Setter Property="Background" Value="#FFFFF8E1"/>
                    <Setter Property="BorderBrush" Value="#FFFFD54F"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="6" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Margin="0,0,0,15" Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="💰" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Месячные расходы:" Style="{StaticResource SummaryTextStyle}"/>
                    <TextBlock Text="{Binding MonthlyCost, StringFormat={}{0} руб., Mode=OneWay}" 
                              Style="{StaticResource SummaryTextStyle}" Foreground="{StaticResource PrimaryBrush}" 
                              Margin="5,0,0,0" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="📊" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Годовые расходы:" Style="{StaticResource SummaryTextStyle}"/>
                    <TextBlock Text="{Binding YearlyCost, StringFormat={}{0} руб., Mode=OneWay}" 
                              Style="{StaticResource SummaryTextStyle}" Foreground="{StaticResource PrimaryBrush}"
                              Margin="5,0,0,0" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Активных подписок:" Style="{StaticResource SummaryTextStyle}"/>
                    <TextBlock Text="{Binding ActiveSubscriptionsCount, Mode=OneWay}" 
                              Style="{StaticResource SummaryTextStyle}" Foreground="{StaticResource AccentBrush}"
                              Margin="5,0,0,0" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="6"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Margin="0,0,0,15" Padding="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                <ComboBox Width="130" SelectedValue="{Binding FilterStatus, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="Активна"/>
                    <ComboBoxItem Content="Приостановлена"/>
                </ComboBox>

                <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                <ComboBox Width="130" SelectedValue="{Binding FilterCategory, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="Стриминг"/>
                    <ComboBoxItem Content="Облачные сервисы"/>
                    <ComboBoxItem Content="ПО"/>
                    <ComboBoxItem Content="Образование"/>
                    <ComboBoxItem Content="Другое"/>
                </ComboBox>

                <TextBlock Text="Период:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                <ComboBox Width="130" SelectedValue="{Binding FilterPaymentPeriod, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="Ежемесячно"/>
                    <ComboBoxItem Content="Ежеквартально"/>
                    <ComboBoxItem Content="Ежегодно"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="6"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <DataGrid ItemsSource="{Binding FilteredSubscriptions}" 
                      SelectedItem="{Binding SelectedSubscription}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserSortColumns="True"
                      RowStyle="{StaticResource UpcomingRowStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Сервис" Binding="{Binding ServiceName}" Width="180"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="130"/>
                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat={}{0} руб.}" Width="110"/>
                    <DataGridTextColumn Header="Период" Binding="{Binding PaymentPeriod}" Width="110"/>
                    <DataGridTextColumn Header="Следующее списание" Binding="{Binding NextBillingDate, StringFormat={}{0:dd.MM.yyyy}}" Width="140"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="➕ Добавить подписку" Command="{Binding AddCommand}"/>
            <Button Content="✏️ Редактировать" Command="{Binding EditCommand}"/>
            <Button Content="⏸️ Приостановить" Command="{Binding SuspendCommand}"/>
            <Button Content="❌ Отменить" Command="{Binding CancelCommand}"/>
            <Button Content="📈 Статистика" Click="StatisticsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>